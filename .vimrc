execute pathogen#infect()

syntax enable
set background=dark
colorscheme solarized

set autoindent
set smartindent
set smartcase
set tabstop=2
set shiftwidth=2
set expandtab

set nu

set encoding=utf-8

set laststatus=2
let g:airline_powerline_fonts=1
let g:airline#extensions#hunks#enabled=0
let g:airline#extensions#branch#enabled=1

let NERDTreeShowHidden=1
